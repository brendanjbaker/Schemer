#!/bin/bash

set -e

./usage 1 "query <configuration-path>" "$@"

configuration_path=$1

if [ ! -f $configuration_path ]; then
	./error "schemer: Configuration '$configuration_path' not found."
fi

source $configuration_path

if [ -z "$host" ]; then
	./error "schemer: \"host\" variable not defined in configuration. $host"
fi

if [ -z "$dbname" ]; then
	./error "schemer: \"dbname\" variable not defined in configuration."
fi

if [ -z "$username" ]; then
	./error "schemer: \"username\" variable not defined in configuration."
fi

if [ -z "$versioning_schema" ]; then
	./error "schemer: \"versioning_schema\" variable not defined in configuration."
fi
